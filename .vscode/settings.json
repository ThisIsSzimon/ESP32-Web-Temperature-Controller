{
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",

  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },

  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.clang_format_style": "file",

  "C_Cpp.default.configurationProvider": "platformio",
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.errorSquiggles": "enabled",
  "files.associations": {
    "cstdlib": "cpp",
    "cstring": "cpp",
    "string": "cpp"
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": ".*",               // każda zapisana ścieżka
        "isAsync": false,
        "cmd": "node scripts/generate_raw_links.js",
        "runIn": "workspace"         // uruchamiaj z katalogu roboczego
      }
    ]
  },
  // (opcjonalnie) przekaż nazwę brancha do skryptu:
  "terminal.integrated.env.windows": { "RAW_BRANCH": "main" },
  "terminal.integrated.env.linux":   { "RAW_BRANCH": "main" },
  "terminal.integrated.env.osx":     { "RAW_BRANCH": "main" }

}
